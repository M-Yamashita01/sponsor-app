!!! 5
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1, shrink-to-fit=no'}
    %title= yield(:title) || 'sponsor-app admin'
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_pack_tag 'admin', media: 'all'
  %body
    %nav.navbar.navbar-expand-lg.navbar-light.bg-light
      %a.navbar-brand{href: '/'} Sponsorships Admin
      %button.navbar-toggler{type: :button, data: {toggle: :collapse, target: '#navbarNavAltMarkup'}, aria: {controls: 'navbarNavAltMarkup', expanded: false, label: 'Toggle navigation'}}
        %span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarNavAltMarkup
        .navbar-nav
          %a.nav-item.nav-link{href: '/'} Test
    .container
      %main
        - if notice
          .alert.alert-success= notice
        = yield
    = javascript_pack_tag 'admin'
